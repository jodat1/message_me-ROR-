<h1 class = "center"> Welcome to MessageMe </h1>

<h4 class="ui center aligned medium icon header">
  <i class="circular orange power off icon"></i>
  Login to continue
</h4>


<%= form_for(:session, url: login_path) do |f| %>
    <div class="ui placeholder segment">
    <div class="ui two column very relaxed stackable grid">
        <div class="column">
        <div class="ui form">
            <div class="field">
            
                
                    <%= f.label :username %>

                    <div class="ui left icon input">
                    <%= f.text_field :username, placeholder: "Enter username"%>
                        <i class="user icon"></i>
                    </div>             
            </div>

            <div class="field">
            <%= f.label :password %>            
            <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Enter password", autocomplete: "off" %>
                <i class="lock icon"></i>
            </div>
            </div>
            <div class="ui orange submit button">Login</div>
        </div>
        </div>
        <div class="middle aligned column">
        <div class="ui inverted orange big button">
            <i class="signup icon"></i>
            Sign Up
        </div>
        </div>
    </div>
    <div class="ui vertical divider">
        Or
    </div>
    </div>

<%end%>
